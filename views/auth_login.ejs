<%- include('../partials/_doc_top'); %>
<head>
  <%- include('../partials/_head'); %>
  <title>Login | TinyApp</title>
</head>
<body>
  <%- include('../partials/_header'); %>
  <main class="container d-flex justify-content-center">
    <div class="col-md-8 col-12">
      <% if (locals.notAuthorized) { %>
      <div class="alert alert-danger mt-4" role="alert">
        You must be logged in to view this page.
      </div>
      <% } %>
      <div class="card text-center mt-4">
        <div class="card-header">
          <p class="h3 my-2">Login</p>
        </div>
        <% if (locals.error) { %>
        <div class="alert alert-danger" style="margin-bottom: -1em;" role="alert">
          Invalid email or password
        </div>
        <% } %>
        <!-- Default form subscription -->
        <div class="d-flex justify-content-center">
          <form class="text-center p-5 col-md-10" action="/login" method="post">
            <!-- Name -->
            <input
              type="email"
              name="email"
              id="registerFormEmail"
              class="form-control form-control-lg mb-4"
              placeholder="E-mail"
            />
            <!-- Email -->
            <input
              type="password"
              name="password"
              id="registerFormPassword"
              class="form-control form-control-lg mb-4"
              placeholder="password"
            />
            <!-- Sign in button -->
            <button class="btn btn-dark btn-block btn-lg" type="submit">Sign in</button>
          </form>
        </div>
        <!-- Default form subscription -->
      </div>
    </div>
  </main>
  <%- include('../partials/_body_foot'); %>
</body>
<%- include('../partials/_doc_foot'); %>
