<%- include('../partials/_doc_top'); %>
<head>
  <%- include('../partials/_head'); %>
  <title>Register | TinyApp</title>
</head>
<body>
  <%- include('../partials/_header'); %>
  <main class="container d-flex justify-content-center">
    <div class="col-lg-8 col-md-11 col-12">
      <div class="card text-center mt-4">
        <div class="card-header">
          <p class="h3 my-2">Register</p>
        </div>
        <% if (locals.err) { %>
        <div class="alert alert-danger" role="alert"><%= err %></div>
        <% } %>
        <!-- Default form subscription -->
        <div class="d-flex justify-content-center">
          <form class="text-center p-5 col-md-10" action="/register" method="post">
            <!-- Name -->
            <input
              type="email"
              name="email"
              id="registerFormEmail"
              class="form-control form-control-lg mb-4"
              placeholder="E-mail"
            />
            <!-- Email -->
            <input
              type="password"
              name="password"
              id="registerFormPassword"
              class="form-control form-control-lg mb-4"
              placeholder="Password"
            />
            <input
              type="password"
              name="passwordConfirm"
              id="registerFormPasswordConfirm"
              class="form-control form-control-lg mb-4"
              placeholder="Confirm password"
            />
            <!-- Sign in button -->
            <button class="btn btn-dark btn-block btn-lg" type="submit">Sign in</button>
          </form>
        </div>
        <!-- Default form subscription -->
      </div>
      <% console.log(locals.err) %> <% if (locals.email) { %> <%= locals.id %> <%= locals.email %> <% } %>
    </div>
  </main>
  <%- include('../partials/_body_foot'); %>
</body>
<%- include('../partials/_doc_foot'); %>
