<% if (user.id) { %>
<div class="container">
  <h3>My URLs</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Short URL</th>
        <th scope="col">Visibility</th>
        <th scope="col">Long URL</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(let url of user.urls) { %>
      <tr>
        <td><a href="/urls/<%= url.shortID %>"><%= url.shortID %></a></td>
        <td>
          <% if (url.public === true) { %>
          public
          <% } else { %>
            private
          <% } %>
        </td>
        <td><%= url.longURL %></td>
        <td>
          <a href="/urls/<%= url.shortID %>"><button type="button" class="btn btn-primary">Edit</button></a>
        </td>
        <td>
          <form method="POST" action="/urls/<%= url %>/delete">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<% } else { %>
  <div class="container">
    <div class="alert alert-success h6" role="alert">
      <a href="/login">Login</a> or <a href="/register">Create and Account</a> and add your own URLS!
    </div>
  </div>
<% } %>
