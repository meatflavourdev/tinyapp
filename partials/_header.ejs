<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand mb-0" href="/urls"><span class="navbar-text text-white h4 mb-1">TinyApp</span></a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link active" href="/urls">Shortened URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create Shortlink</a>
      </div>
      <% if (locals.user.id) { %>
        <a href="/user/<%= user.id %>"><span class="navbar-text mr-4 h5 mb-1 text-white"><%= user.email %></span></a>
      <a href="/logout"><button type="submit" class="btn btn-dark">Logout</button></a>
      <% } else { %>
        <div class="navbar-nav ml-auto">
          <a class="nav-item nav-link text-white" href="/login">Login</a>
          <a class="nav-item nav-link text-white" href="/register">Register</a>
        </div>
      <% } %>
    </div>
  </nav>
</header>
